    window.onload = function () {
      /* 监听电脑浏览器窗口尺寸改变 */
      if (window.innerWidth >= 500) {
        window.location.href = "/pc.html?redirect=" + encodeURIComponent(window.location.href)
      }
    }

    function createQRCode (n) {
      var url = window.location.href;
      new QRCode(n, {
        text: url,
        width: 150,
        height: 150,
        colorDark: "#000000",
        colorLight: "#ffffff",
        correctLevel: QRCode.CorrectLevel.H
      })
    }
  </script>
